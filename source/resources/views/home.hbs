<div class="mt-4">
    <div class="row">
        {{#each SanPham}}
            <div class="col-sm-6 col-lg-4">
                <div class="card">
                    <a href="/chi_tiet_san_pham/{{this.slug}}">
                        <img src="/img/{{this.image}}" alt="" class="card-img-top">
                    </a>
                    <div class="card-body">
                        <a href="/chi_tiet_san_pham/{{this.slug}}">
                            <h5 class="card-list">{{this.Name}}</h5>
                        </a>
                        
                        <p class="card-text">{{this.Price}}</p>
                        <a href="" class="btn btn-primary">Mua</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>